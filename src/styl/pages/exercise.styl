.exercise,
.exercise input
  font-family 'JetBrains Mono', monospace
  font-size 3rem
  margin 0 auto

.exercise-item
  display flex
  justify-content center
  align-items center

  + .exercise-item
    margin-top 1rem

  > div
    margin-right .25em

    &:last-child
      margin-right 0

  .number
    width 2.25em
    text-align center

  .number-input
    width 4em

  .form-control
    &:valid
      border
